{
  "version": 2,
  "redirects": [
    {
      "source": "http://thecrumbybaker.com/:path*",
      "destination": "https://www.thecrumbybaker.com/:path*",
      "permanent": true
    },
    {
      "source": "https://thecrumbybaker.com/:path*",
      "destination": "https://www.thecrumbybaker.com/:path*",
      "permanent": true
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.js" },

    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
